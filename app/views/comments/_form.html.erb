<%= form_with(model:[@article, @article.comments.build], local: true) do |form| %>
  <div>
    <%=form.label :commenter %>
    <%=form.text_field :commenter %>
  </div>

  <div>
    <%=form.label :body %><br>
    <%=form.text_area :body %>
  </div>

  <div>
    <%=form.submit "Agregar comentario", class:"btn btn-primary" %>
  </div>


<% end %>
