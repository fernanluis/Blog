<div class="card container" style="padding:15px; margin-top:1em">
  <%= form_with(model:@article, local: true) do |form| %>

    <div>
      <%=form.label :title %>
      <%=form.text_field :title %>
    </div>
    
    <div>
      <%=form.label :category_elements %>
      <div class="row">
        <% @categories.each do |category| %>
          <label class="col-6 col-sm-2">
            <%=form.check_box :category_elements, {multiple: true}, category.id, nil %>
            <%= category.title %>
          </label>
        <%end%>
      </div>
    </div>

    <div>
      <%=form.label :content %>
      <%=form.rich_text_area :content %>
    </div>

    <div>
      <%=form.submit class:"btn btn-primary"%>
    </div>

  <%end%>
</div>
